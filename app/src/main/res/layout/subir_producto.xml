<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3344"
    tools:context=".activities.ChatBoundedContext.SubirProductoActivity">

    <!-- Image Selection Area -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="147dp"
        android:layout_height="127dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/select_image"
        android:src="@drawable/upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Form Area -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintVertical_bias="0.914">

        <!-- Product Name -->
        <ScrollView
            android:layout_width="382dp"
            android:layout_height="345dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/nombre_del_product"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/product_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#A9A9A9"
                    android:hint="@string/ingrese_el_nombre_del_producto"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Cantidad de productos"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/product_quantity_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#A9A9A9"
                    android:hint="Ingrese la cantidad"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Descripción del producto"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/product_description_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#A9A9A9"
                    android:hint="Ingrese la descripción del producto"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Precio"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/price_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#A9A9A9"
                    android:hint="Ingrese el precio del producto"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Imagen"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/image_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#A9A9A9"
                    android:hint="Ingrese url de la imagen"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="categoria"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/categoria_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#A9A9A9"
                    android:hint="Ingrese categoria del producto"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#80FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Personalizable:"
                    android:textColor="#234D5E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/box_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:buttonTint="#234D5E"
                        android:text="Color"
                        android:textColor="#234D5E" />

                    <CheckBox
                        android:id="@+id/box_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:buttonTint="#234D5E"
                        android:text="Tamaño"
                        android:textColor="#234D5E" />

                    <CheckBox
                        android:id="@+id/customizable_shape"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#234D5E"
                        android:text="Forma"
                        android:textColor="#234D5E" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Product Quantity -->

        <!--precio-->


        <!-- Customizable Options -->


        <!-- Add Product Button -->
        <Button
            android:id="@+id/add_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF234D5E"
            android:text="Add product"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>