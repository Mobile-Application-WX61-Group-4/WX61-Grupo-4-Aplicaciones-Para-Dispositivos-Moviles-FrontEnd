<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3344">

    <!-- Image Selection Area -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="104dp"
        android:contentDescription="@string/select_image"
        android:src="@drawable/upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Form Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintVertical_bias="0.914">

        <!-- Product Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/nombre_del_producto"
            android:textColor="#234D5E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/product_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/ingrese_el_nombre_del_producto"
            android:textColorHint="#80FFFFFF"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:backgroundTint="#A9A9A9" />

        <!-- Product Quantity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Cantidad de productos"
            android:textColor="#234D5E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/product_quantity_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Ingrese la cantidad"
            android:textColorHint="#80FFFFFF"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:backgroundTint="#A9A9A9" />

        <!-- Customizable Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Personalizable:"
            android:textColor="#234D5E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/customizable_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:buttonTint="#234D5E"
                android:text="Color"
                android:textColor="#234D5E" />

            <CheckBox
                android:id="@+id/customizable_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:buttonTint="#234D5E"
                android:text="TamaÃ±o"
                android:textColor="#234D5E" />

            <CheckBox
                android:id="@+id/customizable_shape"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:buttonTint="#234D5E"
                android:text="Forma"
                android:textColor="#234D5E" />
        </LinearLayout>

        <!-- Add Product Button -->
        <Button
            android:id="@+id/add_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="Add product"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>